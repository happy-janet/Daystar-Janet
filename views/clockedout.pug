doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Clock Out Baby
  link(rel='stylesheet' href='/css/clockin.css')
h1 Clock Out Baby
form#clockInForm
  .form-group
    label(for='babyName') Baby&apos;s Name:
    input#babyName(type='text' name='babyName' value=baby.babyName)
  .form-group
    label(for='personName') Person Who&apos;s Taking the Baby:
    input#personName(type='text' name='personName' value=baby.personName)
  .form-group
    label(for='personContact') Contact of the Person:
    input#personContact(type='text' name='personContact' value=baby.personContact)
  .form-group
    label(for='clockOutTime') Clock Out Time:
    input#clockOutTime(type='text' name='clockOutTime' value=baby.clockOutTime)
  input(type='submit' value='Clock In')
script(src='/js/clockin.js')
